# Image and container
MCP_IMAGE=ghcr.io/your-org/linkwarden-mcp:latest
MCP_CONTAINER_NAME=linkwarden-mcp
MCP_RESTART_POLICY=unless-stopped

# Runtime settings
MCP_HOST=0.0.0.0
MCP_PORT=8080
MCP_DATA_DIR=/data
MCP_LOG_LEVEL=info
MCP_STATE_DB_PATH=/data/state.db
MCP_CONFIG_ENC_PATH=/data/config.enc
MCP_SESSION_TTL_HOURS=12
MCP_COOKIE_SECURE=auto

# Auto-unlock settings (passphrase file mounted read-only)
MCP_MASTER_PASSPHRASE_HOST_FILE=/volume2/docker/linkwarden-mcp/master.passphrase
MCP_MASTER_PASSPHRASE_FILE=/run/secrets/linkwarden-mcp-master-passphrase

# Volume mapping
MCP_VOLUME_HOST=/volume2/docker/linkwarden-mcp/data
MCP_VOLUME_CONTAINER=/data

# Network and static IP
MCP_DOCKER_NETWORK=allmydocker-net
MCP_STATIC_IP=192.168.123.220
